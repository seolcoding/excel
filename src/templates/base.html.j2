<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ app_name }}</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Noto Sans KR for Korean typography -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Alpine.js for reactivity -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <style>
        {% block base_styles %}
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --success-color: #198754;
            --border-radius: 8px;
        }

        body {
            font-family: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .app-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .app-header {
            margin-bottom: 2rem;
        }

        .app-title {
            font-weight: 700;
            color: #212529;
        }

        .app-description {
            color: var(--secondary-color);
        }

        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .card-header {
            background: white;
            border-bottom: 1px solid #e9ecef;
            font-weight: 500;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 0.375rem;
        }

        .form-control {
            border-radius: 6px;
            border: 1px solid #ced4da;
            padding: 0.5rem 0.75rem;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
        }

        .result-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-left: 4px solid var(--primary-color);
        }

        .result-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .btn-calculate {
            padding: 0.625rem 1.5rem;
            font-weight: 500;
        }

        .btn-print {
            padding: 0.5rem 1rem;
        }

        /* Loading state */
        .loading {
            opacity: 0.6;
            pointer-events: none;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }
        {% endblock %}

        {% block custom_styles %}
        {{ custom_css | default('') }}
        {% endblock %}

        {% block print_styles %}
        @media print {
            @page {
                size: {{ print_layout.paper_size | default('A4') }} {{ print_layout.orientation | default('portrait') }};
                margin: {{ print_layout.margins.top | default('20mm') }} {{ print_layout.margins.right | default('15mm') }} {{ print_layout.margins.bottom | default('20mm') }} {{ print_layout.margins.left | default('15mm') }};
            }

            body {
                background: white !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }

            .no-print {
                display: none !important;
            }

            .card {
                box-shadow: none !important;
                border: 1px solid #dee2e6 !important;
            }

            .form-control {
                border: none !important;
                padding: 0 !important;
                background: transparent !important;
            }

            .btn {
                display: none !important;
            }

            {% for selector in print_layout.page_breaks | default([]) %}
            {{ selector }} {
                page-break-before: always;
            }
            {% endfor %}
        }
        {% endblock %}
    </style>
</head>
<body>
    <div class="app-container" x-data="appData()">
        {% block header %}
        <header class="app-header">
            <h1 class="app-title">{{ app_name }}</h1>
            {% if app_description %}
            <p class="app-description">{{ app_description }}</p>
            {% endif %}
        </header>
        {% endblock %}

        {% block content %}
        <div class="row g-4">
            {% block input_section %}{% endblock %}
            {% block output_section %}{% endblock %}
        </div>
        {% endblock %}

        {% block footer %}
        <footer class="mt-4 pt-4 border-top text-muted text-center small no-print">
            <p>{{ source_file | default('') }}에서 변환됨</p>
        </footer>
        {% endblock %}
    </div>

    <script>
        {% block helper_functions %}
        {{ helper_functions | default('') }}
        {% endblock %}

        {% block app_data %}
        function appData() {
            return {
                // State
                loading: false,

                {% block data_properties %}
                {{ data_properties | default('') }}
                {% endblock %}

                {% block computed_properties %}
                {{ computed_properties | default('') }}
                {% endblock %}

                {% block methods %}
                calculate() {
                    this.loading = true;
                    try {
                        {{ calculate_logic | default('') }}
                    } finally {
                        this.loading = false;
                    }
                },

                print() {
                    window.print();
                },

                reset() {
                    {{ reset_logic | default('') }}
                },

                {{ custom_methods | default('') }}
                {% endblock %}
            };
        }
        {% endblock %}
    </script>
</body>
</html>
